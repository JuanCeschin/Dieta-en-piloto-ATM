<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6 logo">
      <%= image_tag "Logo2.png", alt: "Logo" %>
    </div>
    <div class="col-12 col-lg-6">
      <!------------------------------------------------Carousel---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li style='background-color:#71cc34' data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li style='background-color:#71cc34' data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li style='background-color:#71cc34' data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src='https://images.unsplash.com/photo-1543352634-a1c51d9f1fa7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80' style="box-shadow: 0 0 15px rgba(0,0,0,0.2); width:100%; height: 100vh;filter: brightness(60%)" alt="...">
            <div class="carousel-caption d-default-block">
              <div class="text-div d-flex align-items-center justify-content-center">
                <h1>¿Querés <strong style="color:#71cc34">ahorrar</strong> <br>tiempo y <strong style="color:#71cc34">comer</strong> <br><strong style="color:#71cc34">saludable?</strong></h1>
              </div>
            </div>
          </div>
          <div class="carousel-item ">
            <img src='https://images.unsplash.com/photo-1543352634-a1c51d9f1fa7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80' style="width:100%; height: 100vh; filter: brightness(60%)" alt="...">
            <div class="carousel-caption d-default-block">
              <div class="text-div d-flex align-items-center justify-content-center">
                <h1><strong style="color:#71cc34">Lo hacemos por vos!</strong></h1>
              </div>
            </div>
          </div>
          <div class="carousel-item ">
            <img src='https://images.unsplash.com/photo-1543352634-a1c51d9f1fa7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80' style="width:100%; height: 100vh; filter: brightness(60%)" alt="...">
            <div class="carousel-caption d-default-block">
              <div class="text-div d-flex align-items-center justify-content-center">
                <h1>Definí <strong style="color:#71cc34">metas </strong><i class="fas fa-check"></i><br>Elejí <strong style="color:#71cc34">platos</strong> <i class="fas fa-check"></i><br><strong style="color:#71cc34">Comprá </strong><i class="fas fa-check"></i></h1>
              </div>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        </div>
        <div id="btn-override" >
          <%= link_to "Ver platos", items_path, class:"btn btn-success btn-block" %>
          <% if user_signed_in? %>
            <%= link_to "Mis objetivos", daily_target_path(current_user.daily_target.id), class:"btn btn-warning btn-block" %>
          <% end %>
      </div>
      <!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------>
    </div>
  </div>
</div>

