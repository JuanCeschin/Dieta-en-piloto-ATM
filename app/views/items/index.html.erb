<!-- index.html.erb -->
<div class="container">
  <% @items.each do |item|  %>
    <%= render 'item-modal', item: item, order_item: @order_item %>
  <% end %>

  <div class="row">
    <div class="col-sm-12">
      <%= render 'cart-modal', order: @order%>
    </div>
  </div>

  <!--Btn Carousel-->
  <hr>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div id="carousel-item-override" class="carousel-item active">
      <div class="categories">
        <%= link_to "", class: "category hvr-grow" do %>
          <%= image_tag @categories.first.picture, alt: "ensaladas", id:"ensaladas", class: "category hvr-grow-s" %>
          <h2>Ensaladas</h2>
        <% end %>
        <%= link_to "", class: "category hvr-grow" do %>
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1572802419224-296b0aeee0d9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1003&q=80" alt="First slide">
          <h2>Hamburguesas</h2>
        <% end %>
        <%= link_to "", class: "category hvr-grow" do %>
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1574672281194-db420378032d?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="First slide">
          <h2>Pollos</h2>
        <% end %>
        <%= link_to "", class: "category hvr-grow" do %>
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1529692236671-f1f6cf9683ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="First slide">
          <h2>Carnes</h2>
        <% end %>
      </div>
    </div>

    <div id="carousel-item-override" class="carousel-item">
      <div class="categories">
        <%= link_to "", class: "category hvr-grow" do %>
          <img class="d-block w-100 category hvr-grow-s" src="https://images.unsplash.com/photo-1543573852-1a71a6ce19bc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="First slide">
          <h2>Postres</h2>
        <% end %>
        <%= link_to "", class: "category hvr-grow" do %>
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1458642849426-cfb724f15ef7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="First slide">
          <h2>Pizzas</h2>
        <% end %>
        <%= link_to "", class: "category hvr-grow" do %>
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1555949258-eb67b1ef0ceb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="First slide">
          <h2>Pastas</h2>
        <% end %>
        <%= link_to "", class: "category hvr-grow" do %>
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1499125562588-29fb8a56b5d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1189&q=80" alt="First slide">
          <h2>Pescados</h2>
        <% end %>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <i style="font-size: 20px; color:green" class="fas fa-arrow-alt-circle-left"></i>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <i style="font-size: 20px; color:green" class="fas fa-arrow-alt-circle-right"></i>
    <span class="sr-only">Next</span>
  </a>
  </div>
 </div>
 <br>
 <br>
 <br>
 <br>

  <!-- -->

  <div class="text-center pt-3 pb-0 sugerencias bg-white">
    <h2>Tus sugeridos</h2>
  </div>
  <div class="item-cards">
    <% if @items.count == 0 %>
      <%= render 'control_limit' %>
    <% else %>
      <% @items.each do |item|  %>
        <%= render 'item-card', item: item %>
      <% end %>
    <% end %>
  </div>
  <div class="filler-space-consumption"></div>
  <div class="add-consumption fixed-bottom">
    <%= link_to new_item_path, class: "hvr-grow-s d-flex justify-content-center" do%>
      <div class="btn-add-consumption d-flex align-items-center">
        <%= image_tag "components/plus_button_big.png" %>
        <h2>Registrar consumo</h2>
      </div>
    <% end %>
  </div>
</div>

