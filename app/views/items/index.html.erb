<!-- index.html.erb -->
<%= render 'item-modal' %>
<div class="container categories">
  <% @categories.sample(8).each do |category| %>
    <%= link_to "#", class: "hvr-grow" do %>
      <%= image_tag "#{category.picture}", alt: "CategoryX", class: "category hvr-grow-s" %>
    <% end %>
  <% end %>
</div>
<div class="container text-center pt-3 pb-0 sugerencias bg-white">
  <h2>Tus sugeridos</h2>
</div>
<div class="container item-cards">
  <% if @items_suggested.count == 0 %>
    <br>
    <h4 class="text-center my-1"> 0 platos en ±20% de tus objectivos</h4><br>
    <%= link_to edit_daily_target_path(current_user.daily_targets.last.id) do %>
      <h4 class="text-center" style="color:blue">Redefiní objectivos</h4>
    <% end %>
    <br>
  <% else %>
      <% @items_suggested.each do |item|  %>
        <%= render 'item-card', item: item %>
      <% end %>
  <% end %>
</div>

