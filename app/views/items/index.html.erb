<!-- Item show -->
<div class="modal fade" id="itemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        ...
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>


    </div>
  </div>
</div>
<!-- index.html.erb -->
<div class="container categories">
  <% @categories.sample(8).each do |category| %>
    <%= link_to "#", class: "hvr-grow" do %>
      <%= image_tag "#{category.picture}", alt: "CategoryX", class: "category hvr-grow-s" %>
    <% end %>
  <% end %>
</div>
<div class="container text-center pt-3 pb-0 sugerencias bg-white">
  <h2>Tus sugeridos</h2>
</div>
<div class="container item-cards">
    <% @items.each do |item|  %>
      <%= render 'item-card', item: item %>
    <% end %>
</div>
