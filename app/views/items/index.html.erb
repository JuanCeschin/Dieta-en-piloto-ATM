<!-- index.html.erb -->
<% @items.each do |item|  %>
  <%= render 'item-modal', item: item, order_item: @order_item %>
<% end %>

<%= render 'cart-modal', order: @order%>

<div class="container categories">
  <% @categories.sample(4).each do |category| %>
    <%= link_to "#", class: "category hvr-grow" do %>
      <%= image_tag "#{category.picture}", alt: "#{category.name}", class: "category hvr-grow-s" %>
      <h2> <%= category.name.upcase %> </h2>
    <% end %>
  <% end %>
</div>

<div class="container text-center pt-3 pb-0 sugerencias bg-white">
  <h2>Tus sugeridos</h2>
</div>
<div class="container item-cards">
  <% if @items.count == 0 %>
    <%= render 'control_limit' %>
  <% else %>
    <% @items.each do |item|  %>
      <%= render 'item-card', item: item %>
    <% end %>
  <% end %>
</div>
