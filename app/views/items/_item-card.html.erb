<!-- _item-card.html.erb -->
<%= link_to "#itemModal-#{item.id}", data: { toggle: "modal"},
  class: "button", remote: true do %>
  <div class="item-card hvr-grow-s" >
    <div class="item-card-infos">
      <div class="item-card-title">
        <h2 class="card-title"> <%= item.name %> </h2>
      </div>
      <h2 class="card-seller"> <%= item.seller.name %> </h2>
      <div class="item-card-description">
        <p> <%= item.description %> </p>
      </div>
      <div class="d-flex align-items-center justify-content-between item-card-details">
        <h2 class="item-card-price">$<%= item.price %></h2>
        <h2 class="item-card-nutrition"> <%= item.calories %> Kcal</h2>
      </div>
    </div>
    <%= cl_image_tag item.picture.key, alt: "MealX" %>
    <div class="item-card-rating">
      <% if false %>
        <span><i class="fas fa-star" style="color: white!important"></i></span>
      <% else %>
        <p> <%= item.rating.round(1) %> <i class="fas fa-star"></i></p>
      <% end %>
    </div>
  </div>
<% end %>
