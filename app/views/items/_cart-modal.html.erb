<div class="modal fade cart-modal" tabindex="-1" id="cartModal" role="dialog"
  aria-labelledby="itemModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h2>Mi pedido</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <% if !order.nil? %>

          <!-- form route? -->
          <%= form_for [order], html: {class: "cart-modal-form"} do |f| %>
            <% @order.items.each do |item| %>

              <div class="d-flex align-items-center justify-content-between cart-modal-item">



                <h3><%= item.name %></h3>

                <h3>$ <%= item.price %></h3>

              </div>

            <% end %>


            <div class="cart-modal-price">
              <h3>Total: $<%= @order.total_price %></h3>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-green">Continuar compra</button>
            </div>
          <% end %>
          <!-- </form> -->


        <% else %>
          <h1>Carrito vac√≠o</h1>
        <% end %>

      </div>

    </div>
  </div>
</div>
