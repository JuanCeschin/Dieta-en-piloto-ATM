  <div class="d-flex justify-content-between mb-2 mt-0">
    <p class="mb-0 mt-4" style="font-size: 14px">Calorías</p>
    <p class="mb-0 mt-4" style="font-size: 14px"><%= @daily_target.caloric_target - @cal_left %> / <%= @daily_target.caloric_target %> kcal</p>
  </div>
  <!-- <div class="text-right my-0">
    <%= link_to edit_daily_target_path(@daily_target.id), class: "link" do  %>
