<%= simple_form_for @daily_target do |f| %>
  <%= f.input :caloric_target, label: :Calorías, placeholder: 'Cantidad (kcal)' %>
  <%= f.input :protein_target, label: :Proteínas, placeholder: 'Cantidad (g)' %>
  <%= f.input :carb_target, label: :Carbohidratos, placeholder: 'Cantidad (g)' %>
  <%= f.input :fat_target, label: :Grasas, placeholder: 'Cantidad (g)' %>
  <%= f.submit 'Confirmar', class: "btn-green w-100" %>
<% end %>

