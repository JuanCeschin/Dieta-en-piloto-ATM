<div class="container mt-5" style="background-color:white">
  <%= link_to order_item_path(@order_item), method: :delete, data: {confirm: 'Estás seguro/a?'}, class: "link" do  %>
    <div class="d-flex justify-content-center text-center">
      <h1 class="font-weight-bold">Cambiar Fecha de Consumo</h1>
      <i class="fas fa-trash-alt ml-3" style="font-size:100%"></i>
    </div>
  <% end %>

  <h2 class="font-weight-bold text-center"><%= @item.name %></h2>
  <div class="row">
    <div class="col-12">
      <h4 class="font-weight-bold">Información nutricional:</h4>
        <ul>
          <li>Calorías<%= @item.calories %> kcal</li>
          <li>Proteínas<%= @item.proteins %> g</li>
          <li>Carbohidratos<%= @item.carbs %> g</li>
          <li>Grasas Totales<%= @item.fats %> g</li>
        </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h2 class="font-weight-bold" style="color: #184D47">Consumido el:</h4>
      <p style="color: #184D47"><%= @order_item.consumed_at.strftime("%A, %b, %d") %></p>
    </div>
  </div>
  <div>
    <h4 class="font-weight-bold mt-5">Nueva Fecha de Consumo</h4>
    <%= simple_form_for @order_item do |f| %>
      <%= f.input :consumed_at, label: "Fecha", placeholder: 'fecha' %>
      <%= f.submit 'Confirmar', class: 'btn btn-green w-100' %>
    <% end %>
  </div>
</div>
