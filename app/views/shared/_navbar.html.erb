

<div class="navbar navbar-expand-sm navbar-light navbar-tudieta">

  <%= link_to "#", class: "navbar-brand hvr-grow-s" do %>
    <%= image_tag "logo.png" %>
  <% end %>


  <%= link_to "#", class: "navbar-registrar hvr-grow-s" do %>
    <%= image_tag "components/plus_button_big.png" %>
  <% end %>

  <div class="navbar-objetivos">
    <p>OBJETIVO: XCAL</p>
  </div>


  <button type= "button" class= "navbar-carrito hvr-grow-s" data-toggle="modal" data-target="#cartModal">
    <%= image_tag "carrito.png" %>
  </button>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if !current_user.photo.attached? %>
            <%= image_tag "https://res.cloudinary.com/demo/image/upload/w_100,h_100,c_thumb,g_face,r_20,d_avatar.png/non_existing_id.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mis objetivos", edit_daily_target_path(current_user.daily_targets.last.id), class: "dropdown-item" %>
            <%= link_to "Mi consumo", daily_target_path(current_user.daily_targets.last.id), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
