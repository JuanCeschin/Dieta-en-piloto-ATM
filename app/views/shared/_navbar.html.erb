

<div class="navbar navbar-expand navbar-light navbar-tudieta fixed-top">

  <%= link_to items_path, class: "navbar-brand hvr-grow-s" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <% if user_signed_in? && !current_user.daily_target.nil? %>


    <div id="carouselNavbarControls"
      class="carousel slide navbar-targets"
      data-ride="carousel">
      <div id="carousel-navbar" class="carousel-inner">
      <!-- <div id="carousel-navbar-tudieta" class="carousel-inner"> -->
        <div id="carousel-navbar-item" class="carousel-item active">
          <p>Objetivo: 2000 Kcal</p>
        </div>
        <div id="carousel-navbar-item" class="carousel-item">
          <p>60g Proteinas</p>
        </div>
        <div id="carousel-navbar-item" class="carousel-item">
          <p>60g Grasas</p>
        </div>
        <div id="carousel-navbar-item" class="carousel-item">
          <p>60g Cbhs</p>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <%= image_tag "components/flecha_izq.png" %>
        <!-- <span class="carousel-control-prev-icon" aria-hidden="true"></span> -->
        <!-- <span class="sr-only">Previous</span> -->
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <%= image_tag "components/flecha_der.png" %>
        <!-- <span class="carousel-control-next-icon" aria-hidden="true"></span> -->
        <!-- <span class="sr-only">Next</span> -->
      </a>
    </div>

  <% end %>


  <div class="navbar-left d-flex align-items-center">
    <% if current_page?(items_path)%>
      <%= link_to "#cartModal", data: { toggle: "modal"},
        class: "navbar-carrito hvr-grow-s", remote: true do %>
        <i class="fas fa-shopping-cart mr-3 mt-1" ></i> <!-- style="font-size:160%"></i> -->
      <% end %>
    <% end %>


      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <% if !current_user.photo.attached? %>
              <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/330px-Hamburger_icon.svg.png", class: "avatar dropdown-toggle mr-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle mr-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mis objetivos", daily_target_path(current_user.daily_target.id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

  </div>
</div>
<div class="filler-space-navbar navbar-tudieta"></div>
