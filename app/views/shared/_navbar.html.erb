

<div class="navbar navbar-expand-sm navbar-light navbar-tudieta fixed-top">

  <%= link_to items_path, class: "navbar-brand hvr-grow-s" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <% if user_signed_in? && !current_user.daily_target.nil? %>
    <div class="navbar-targets">
      <p>Calorias: 2000 Kcal</p>
    </div>
  <% end %>


  <div class="navbar-left d-flex align-items-center">

    <%= link_to "#cartModal", data: { toggle: "modal"},
      class: "navbar-carrito hvr-grow-s", remote: true do %>
      <i class="fas fa-shopping-cart"></i>
    <% end %>


    <!--<div class="collapse navbar-collapse" id="navbarSupportedContent">-->
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <% if !current_user.photo.attached? %>
              <%= image_tag "https://res.cloudinary.com/demo/image/upload/w_100,h_100,c_thumb,g_face,r_20,d_avatar.png/non_existing_id.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mis objetivos", daily_target_path(current_user.daily_target.id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    <!--</div>-->

  </div>
</div>
<div class="filler-space-navbar navbar-tudieta"></div>
