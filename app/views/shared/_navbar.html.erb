

<div class="navbar navbar-expand navbar-light navbar-tudieta fixed-top">

  <%= link_to items_path, class: "navbar-brand hvr-grow-s" do %>
    <%= image_tag "Avatar2.png" %>
  <% end %>

  <% if user_signed_in? && !current_user.daily_target.nil? %>

      <div class="navbar-targets">
        <%= link_to "#", id: "nav-dt-btn-left", class: "hvr-grow-s" do %>
          <%= image_tag "components/flecha_izq.png" %>
        <% end %>
        <div class="visible" id="daily-targets-wrapper">
          <div class="datos" id="daily-targets-display">
            <div class="dato active">
              <p>Objetivos para hoy</p>
            </div>
            <div class="dato">
              <p>Calorias: <%= current_user.cal_left %> Kcal</p>
            </div>
            <div class="dato">
              <p>Proteinas: <%= current_user.proteins_left %> g</p>
            </div>
            <div class="dato">
              <p>Carbs.: <%= current_user.carbs_left %> g</p>
            </div>
            <div class="dato">
              <p>Grasas: <%= current_user.fats_left %> g</p>
            </div>
          </div>
        </div>
        <%= link_to "#", id: "nav-dt-btn-right", class: "hvr-grow-s" do %>
          <%= image_tag "components/flecha_der.png" %>
        <% end %>
      </div>

  <% end %>


  <div class="navbar-left d-flex align-items-center">
    <% if current_page?(items_path)%>
      <%= link_to "#cartModal", data: { toggle: "modal"},
        class: "navbar-carrito hvr-grow-s", remote: true do %>
        <i class="fas fa-shopping-cart mr-3 mt-1" ></i> <!-- style="font-size:160%"></i> -->
      <% end %>
    <% end %>


      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <% if !current_user.photo.attached? %>
              <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/330px-Hamburger_icon.svg.png", class: "avatar dropdown-toggle mr-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle mr-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mis objetivos", daily_target_path(current_user.daily_target.id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

  </div>
</div>
<div class="filler-space-navbar navbar-tudieta"></div>
